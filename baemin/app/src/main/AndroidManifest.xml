<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yunwoon.clientproejct">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".sharedPreference.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_baemin"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_baemin_round"
        android:supportsRtl="true"
        android:theme="@style/AppWhiteTheme">

        <activity
            android:name=".CleanStoreActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ReviewReadActivity"
            android:parentActivityName=".ReviewActivity"
            android:theme="@style/ReviewAppTheme2" />
        <activity
            android:name=".ReviewModifyActivity"
            android:parentActivityName=".ReviewActivity"
            android:theme="@style/ReviewAppTheme2" />
        <activity
            android:name=".ReviewCreateActivity"
            android:parentActivityName=".ReviewActivity"
            android:theme="@style/ReviewAppTheme" />
        <activity
            android:name=".ReviewActivity"
            android:parentActivityName=".MyBaeminActivity" />
        <activity
            android:name=".LoginActivity"
            android:parentActivityName=".MyBaeminActivity" />
        <activity
            android:name=".StoreActivity"
            android:parentActivityName=".DeliveryActivity"
            android:theme="@style/StoreAppTheme" />
        <activity
            android:name=".DeliveryActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MyPageActivity"
            android:parentActivityName=".MyBaeminActivity" />
        <activity
            android:name=".AddressActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MyBaeminActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".IntroActivity"
            android:theme="@style/FullScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>